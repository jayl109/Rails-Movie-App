<h1><%= @movie.name if @movie.name %></h1>

<h3>Average Rating: <%= @movie.avg_rating if @movie.avg_rating %></h3>
<p>Description: <%= @movie.description if @movie.description %></p>

<p>Reviews</p>
<% @reviews.each do |r| %>
	<% if r.movie_id == @movie.id %>
		<p>Critic: <%= Critic.find(r.critic_id).name %>, Rating: <%= r.rating %>, Comments: <%= r.text %></p>
	<% end %>
<% end %>