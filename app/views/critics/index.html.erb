<h1>Critics</h1>
<table id="critics_table">
  <tr>
    <th>Name</th>
    <th>Biography</th>
    <th>Reviews</th>
    <th>Subscription</th>
  </tr>
  <% @critics.each do |c| %>
    <tr>
      <td><%= link_to c.name, critic_path(c.id) %></td>
      <td><%= c.bio %></td>
      <td>
        <table>
          <% c.reviews.each do |r| %>
            <tr>
              <td><%= r.movie.name %></td>
              <td><%= r.rating %></td>
              <td><%= r.text %></td>
            </tr>
          <% end %>
        </table>
      </td>
      <% if current_viewer.critics.include? c %>
        <td><%= button_to "Unsubscribe", cunsubscribe_path(id:c), :class => "button medium", :method => :patch %></td>
      <% else %>
        <td><%= button_to "Subscribe", csubscribe_path(id:c), :class => "button medium", :method => :patch %></td>
      <% end %>
    </tr>
  <% end %>
</table>